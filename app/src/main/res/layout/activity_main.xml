<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16253F"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:text="AstroView"
        android:textColor="#56FEFF"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/open_sans"
            android:text="Horoscope"
            android:textColor="#56FEFF"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#16253F">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cyan_border">

            </FrameLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="runHoroscopeMenu"
                app:srcCompat="@drawable/ic_tarot" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:text="About the author"
            android:textColor="#56FEFF"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#16253F">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cyan_border">

            </FrameLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_gravity="center"
                android:onClick="runAuthorInfo"
                app:srcCompat="@drawable/ic_man" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/cyan_border"
            android:fontFamily="@font/open_sans"
            android:onClick="signOut"
            android:text="sign out"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#56FEFF"
            android:fontFamily="@font/open_sans"
            android:onClick="quit"
            android:text="Quit"
            android:textColor="#16253F" />
    </LinearLayout>

</LinearLayout>